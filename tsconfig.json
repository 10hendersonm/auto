{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6", "es2017"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "plugins": [
      { "name": "typescript-tslint-plugin", "configFile": "./tslint.json" }
    ]
  },
  "include": ["./src/**/*"]
}
