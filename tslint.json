{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-xo/space"
  ],
  "linterOptions": {
    "exclude": ["**/*.json", "scripts/template-plugin/**/*"]
  },
  "jsRules": {},
  "rules": {
    // Just let prettier handle it
    "align": false,
    // Uppercase comments are dumb
    "comment-format": false,
    // Sometimes we done need the first few params
    "no-unused": [true, "ignore-parameters"],
    // I like spaces around my objects!
    "object-curly-spacing": false,
    // less characters on screen
    "quotemark": [true, "single", "avoid-escape"],
    // lots of overhead for little gain
    "object-literal-sort-keys": false,
    "max-classes-per-file": [true, 2, "exclude-class-expressions"],
    // Allow ! character
    "no-non-null-assertion": false,
    "no-floating-promises": false,
    "no-console": false,
    "no-unsafe-any": false,
    "no-object-literal-type-assertion": false,
    "no-unnecessary-callback-wrapper": false,
    "type-literal-delimiter": { "singleLine": "never" },
    "typedef": false
  },
  "rulesDirectory": []
}
